<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:fillViewport="true"
    tools:context=".activity.ScanSIMActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_driving_licence"
                android:clickable="true"
                android:onClick="takePicture"
                android:background="?android:attr/selectableItemBackground" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Reset"
                android:textAllCaps="false"
                android:enabled="false"/>

            <Button
                android:id="@+id/btn_extract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Extract"
                android:textAllCaps="false"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/info_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:visibility="visible"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:visibility="invisible"
                android:id="@+id/spinner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="Nama"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/label_name"
                        android:hint="Nama lengkap"
                        android:id="@+id/et_name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="Alamat:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:hint="Alamat lengkap"
                        android:id="@+id/et_address" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="TTL:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/label_dob"
                        android:hint="Tempat/Tanggal lahir"
                        android:id="@+id/et_dob" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_religion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="Tinggi:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/label_religion"
                        android:hint="Tinggi badan (cm)"
                        android:id="@+id/et_religion" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="Jenis Kelamin:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:hint="Laki-laki/Perempuan"
                        android:id="@+id/et_gender" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="Pekerjaan:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/label_religion"
                        android:hint="Pekerjaan"
                        android:id="@+id/et_job" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_nik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="No. SIM:"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/label_name"
                        android:hint="Nomor SIM"
                        android:inputType="number"
                        android:id="@+id/et_nik" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/label_valid_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:text="Berlaku s/d"
                        android:textAllCaps="true"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:hint="Masa berlaku"
                        android:id="@+id/et_valid_date" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:enabled="false"/>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="Save"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
